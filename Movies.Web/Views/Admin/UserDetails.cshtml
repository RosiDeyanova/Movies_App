@model Movies.Web.ViewModel.Admin.AdminViewModel
<div class="content-grid">
    <table class="table">
        <h2>User Details</h2>
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AllUsers)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Username</td>
                    <td>@item.Email</td>
                    <td>
                        @if (item.IsAdmin == true && item.Username != Model.Username)
                        {
                            <a asp-controller="Admin" asp-action="RemoveAdminRole" asp-route-id="@item.Id">Remove Admin Role</a>
                        }
                        else if (item.IsAdmin == false && item.Username != Model.Username)
                        {
                            <a asp-controller="Admin" asp-action="SetAdminRole" asp-route-id="@item.Id">Set Admin Role</a>
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="button" onclick="location.href='@Url.Action("Index", "Admin")'" style="width:100px; height:50px; margin:15px;">Back</button>
</div>
