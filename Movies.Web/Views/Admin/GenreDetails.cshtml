@model Movies.Web.ViewModel.Admin.AdminViewModel

<div class="content-grid">
    <h2>Genres Details</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Name</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AllGenres)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Genres" asp-route-id="@item.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="button" onclick="location.href='@Url.Action("Index", "Admin")'" style="width: 100px; height: 50px; margin: 15px;">Back</button>
</div>