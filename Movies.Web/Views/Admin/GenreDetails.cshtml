@model Movies.Web.ViewModel.Admin.AdminViewModel

<div class="content-grid">
    <h2>Genres Details</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Name</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AllGenres)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Genre" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-controller="Genre" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>