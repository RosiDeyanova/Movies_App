@model Movies.Web.ViewModel.Admin.AdminViewModel

<div class="content-grid">
    <h2>Movies Details</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Title</th>
                <th scope="col">Year</th>
                <th scope="col">Director</th>
                <th scope="col">Image</th>
                <th scope="col">Studio Id</th>
                <th scope="col">Genre Id</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AllMovies)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Title</td>
                    <td>@item.Year</td>
                    <td>@item.Director</td>
                    <td>@item.Image</td>
                    <td>@item.Studio.Id</td>
                    <td>@item.Genre.Id</td>
                    <td>
                        <a asp-action="Details" asp-controller="Movies" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Edit" asp-controller="Movies" asp-route-id="@item.Id">Edit</a> |
                        @if (item.IsDeleted == false)
                        {
                            <a asp-action="Delete" asp-controller="Movies" asp-route-id="@item.Id">Delete</a>

                        }
                        else
                        {
                            <a asp-action="Restore" asp-controller="Movies" asp-route-id="@item.Id">Restore</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table> 
    <button type="button" onclick="location.href='@Url.Action("Index", "Admin")'" style="width: 100px; height: 50px; margin: 15px;">Back</button>
</div>