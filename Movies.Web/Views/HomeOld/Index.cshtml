@model IEnumerable<Movies.BL.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    @if (Model.Count() == 0) //stupid, but it works
    {
        @Html.TextBox("Search", null, new { @placeholder = "Search" })
        <input type="submit" value="Search" />
    }
    else
    {
        @Html.TextBox("movieTitle", null, new { @placeholder = "Search" })
        <input type="submit" value="Search" />
    }


}
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudioName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudioAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenreName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Director)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudioName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudioAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GenreName)
                    </td>
                    <td>
                        <a href="javascript:void(0);" class="anchorDetail" data-id="@item.Id">Edit</a>|
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }

        }
        else
        {
            <tr>
                <td colspan="5">
                    There is no such movie.
                </td>
            </tr>
        }
    </tbody>
</table>
