  <div class="content-grid" style="transform: translate(0px, 0px); transition: transform 0.4s ease-in-out 0s;">
      <!-- SECTION BANNER -->
      <div class="section-banner">

          <!-- SECTION BANNER TITLE -->
          <p class="section-banner-title">Upload a movie</p>
          <!-- /SECTION BANNER TITLE -->
          <!-- SECTION BANNER TEXT -->
          <p class="section-banner-text">Contribute to our movie library</p>
          <!-- /SECTION BANNER TEXT -->
      </div>
      <!-- /SECTION BANNER -->
      <!-- GRID -->
      <div class="grid grid-7-9 medium-space">
          <!-- GRID COLUMN -->
          <div class="account-hub-content">
              <!-- SECTION HEADER -->
              <div class="section-header">
                  <!-- SECTION HEADER INFO -->
                  <div class="section-header-info">
                      <!-- SECTION TITLE -->
                      <h2 class="section-title">Movie Info</h2>
                      <!-- /SECTION TITLE -->
                  </div>
                  <!-- /SECTION HEADER INFO -->
              </div>
              <!-- /SECTION HEADER -->
              <!-- GRID COLUMN -->
              <div class="grid-column">
                  <!-- GRID -->
                  <div class="grid grid-6 centered">

                      <!-- UPLOAD BOX -->
                      <div class="upload-box">
                          <!-- UPLOAD BOX ICON -->
                          <svg class="upload-box-icon icon-members">
                              <use xlink:href="#svg-members"></use>
                          </svg>
                          <!-- /UPLOAD BOX ICON -->
                          <!-- UPLOAD BOX TITLE -->
                          <p class="upload-box-title">Cover photo</p>
                          <!-- /UPLOAD BOX TITLE -->
                          <!-- UPLOAD BOX TEXT -->
                          <p class="upload-box-text">110x110px size minimum</p>
                          <!-- /UPLOAD BOX TEXT -->
                      </div>
                      <!-- /UPLOAD BOX -->
                  </div>
                  <!-- /GRID -->
                  <!-- WIDGET BOX -->
                  <div class="widget-box">
                      <!-- WIDGET BOX TITLE -->
                      <p class="widget-box-title">Details</p>
                      <!-- /WIDGET BOX TITLE -->
                      <!-- WIDGET BOX CONTENT -->
                      <div class="widget-box-content">
                          <!-- FORM -->
                          <form class="form">
                              <!-- FORM ROW -->
                              <div class="form-row split">
                                  <!-- FORM ITEM -->
                                  <div class="form-item">
                                      <!-- FORM INPUT -->
                                      <div class="form-input small active">
                                          <label for="profile-name">Movie Name</label>
                                          <input asp-for="@Model.Title" type="text" id="profile-name" name="profile_name">
                                          <span asp-validation-for="@Model.Title" class="text-danger"></span>
                                      </div>
                                      <!-- /FORM INPUT -->
                                  </div>
                                  <!-- /FORM ITEM -->
                                  <!-- FORM ITEM -->
                                  <div class="form-item">
                                      <!-- FORM INPUT -->
                                      <div class="form-input small active">
                                          <label for="profile-tagline">Year</label>
                                          <input asp-for="@Model.Year" type="text" id="profile-tagline" name="profile_tagline" value="">
                                          <span asp-validation-for="@Model.Year" class="text-danger"></span>
                                      </div>
                                      <!-- /FORM INPUT -->
                                  </div>
                                  <!-- /FORM ITEM -->
                              </div>
                              <!-- /FORM ROW -->
                              <!-- FORM ROW -->
                              <div class="form-row split">
                                  <!-- FORM ITEM -->
                                  <div class="form-item">
                                      <!-- FORM INPUT -->
                                      <div class="form-input small full">
                                          <textarea id="profile-description" name="profile_description" placeholder="Summary"></textarea>
                                      </div>
                                      <!-- /FORM INPUT -->
                                  </div>
                                  <!-- /FORM INPUT -->
                                  <!-- /FORM ITEM -->
                              </div>
                              <!-- /FORM ROW -->
                              <!-- FORM ROW -->
                              <div class="form-row split">
                                  <!-- FORM ITEM -->
                                  <div class="form-item">
                                      <!-- FORM SELECT -->
                                      <div class="form-select">
                                          <label for="profile-status">Genre</label>
                                          <select id="profile-status" name="profile_status">
                                              @foreach (var item in Model.Genres)
                                              {
                                                  <option value="@item.Id">@item.Name</option>
                                              }
                                          </select>
                                          <span asp-validation-for="@Model.Genre.Name" class="text-danger"></span>
                                          <!-- FORM SELECT ICON -->
                                          <svg class="form-select-icon icon-small-arrow">
                                              <use xlink:href="#svg-small-arrow"></use>
                                          </svg>
                                          <!-- /FORM SELECT ICON -->
                                      </div>
                                      <!-- /FORM SELECT -->
                                  </div>
                                  <!-- /FORM ITEM -->
                                  <!-- FORM ITEM -->
                                  <div class="form-item">
                                      <!-- FORM INPUT -->
                                      <div class="form-input small">
                                          <label for="profile-birthplace">Director</label>
                                          <input asp-for="@Model.Director" type="text" id="profile-birthplace" name="profile_birthplace">
                                          <span asp-validation-for="@Model.Director" class="text-danger"></span>
                                      </div>
                                      <!-- /FORM INPUT -->
                                  </div>
                                  <!-- /FORM ITEM -->
                              </div>
                              <!-- /FORM ROW -->
                              <!-- FORM ROW -->
                              <div class="form-row split">
                                  <!-- FORM ITEM -->
                                  <div class="form-item">
                                      <!-- FORM INPUT -->
                                      <div class="form-input small">
                                          <label for="profile-psid">Studio Name</label>
                                          <input asp-for="@Model.StudioName" type="text" id="profile-psid" name="profile_psid">
                                          <span asp-validation-for="@Model.StudioName" class="text-danger"></span>
                                      </div>
                                      <!-- /FORM INPUT -->
                                  </div>
                                  <!-- /FORM ITEM -->
                                  <!-- FORM ITEM -->
                                  <div class="form-item">
                                      <!-- FORM INPUT -->
                                      <div class="form-input small">
                                          <label for="profile-xbid">Studio Address</label>
                                          <input asp-for="@Model.StudioAddress" type="text" id="profile-xbid" name="profile_xbid">
                                          <span asp-validation-for="@Model.StudioAddress" class="text-danger"></span>
                                      </div>
                                      <!-- /FORM INPUT -->
                                  </div>
                                  <!-- /FORM ITEM -->
                              </div>
                              <!-- /FORM ROW -->
                          </form>
                          <!-- /FORM -->
                      </div>
                      <!-- WIDGET BOX CONTENT -->
                  </div>
                  <!-- /WIDGET BOX -->
                  <!-- /WIDGET BOX -->
              </div>
              <!-- /GRID COLUMN -->
          </div>
          <!-- /GRID COLUMN -->
      </div>
      <div class="form-group">
          <input type="submit" value="Create" class="btn btn-primary" style="width:350px;margin-top:20px; align-self:center"/>
      </div>
      <!-- /GRID -->
  </div>

